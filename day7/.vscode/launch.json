  "version": "0.2.0",
  "configurations": [
    {
      "name": "Current TS File",
      "type": "pwa-node",
      "request": "launch",
      "args": ["src/index.ts"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "internalConsoleOptions": "openOnSessionStart",
      "cwd": "${workspaceFolder}/",
      "console": "integratedTerminal",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js",
        "!**/node_modules/**"
      ],
    }
